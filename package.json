{
  "name": "wepl",
  "version": "0.0.1",
  "description": "The rookie editor for developing web apps on the go.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "rimraf dist && electron-builder . --ia32"
  },
  "author": "obnoxiousnerd",
  "license": "ISC",
  "dependencies": {
    "custom-electron-titlebar": "^3.2.1",
    "dialogs": "^2.0.1",
    "electron-config": "^2.0.0",
    "emmet-monaco-es": "^4.3.3",
    "jquery": "^3.5.0",
    "live-server": "^1.2.1",
    "monaco-editor": "^0.19.0",
    "opn": "^6.0.0",
    "prettier": "^1.19.1",
    "sweetalert2": "^9.5.4"
  },
  "build": {
    "appId": "code.editor",
    "files": [
      "**/*",
      "!.gitignore",
      "!.main.js",
      "!screenshots${/*}"
    ],
    "productName": "WEPL",
    "copyright": "Copyright Â© 2020 obnoxiosunerd",
    "icon": "./app/icon/appicon.ico",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./app/icon/appicon.ico",
      "uninstallDisplayName": "Uninstall WEPL",
      "artifactName": "${productName}Setup-${arch}-${version}.${ext}"
    }
  },
  "devDependencies": {
    "builder": "^5.0.0",
    "electromon": "^1.0.10",
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0"
  }
}
